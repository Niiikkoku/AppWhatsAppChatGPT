@{
    ViewData["Title"] = "Home Page";
    var Model = new UserMessage();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<form method="post" asp-controller="Home" asp-action="Register" class="p-4 shadow rounded bg-white" style="max-width: 500px; margin: auto;">
    <h3 class="mb-4 text-center">📬 Message Registration</h3>

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="Name" placeholder="Enter your name" required>
    </div>

    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phone" name="Phone" placeholder="+34... or +54..." required>
    </div>

    <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" id="message" name="Message" rows="4" placeholder="Type your message" required></textarea>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-success">Send Message</button>
    </div>
</form>



